<!DOCTYPE html>
<html lang="en">
<head>
    <%- include( 'partials/header' ); -%>
    <title>Index</title>
</head>
<body>
    <%- include( 'partials/navegation' ); -%>
    <div class="container p-4">
        <div class="row">
            <% books.forEach(function(book) { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <p><%- book.title %> - <%- book.autor %></p>
                        </div>
                        <div class="card-body">
                            <p><%- book.description %></p>
                        </div>
                        <img src="<%= book.image %>" class="card-img-top" alt="">
                        <div class="card-footer">
                            <a href="/delete/<%= book.id %>" class="btn btn-danger">Delete</a>
                            <a href="" class="btn btn-primary ml-auto">Edit</a>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>

</body>
</html>